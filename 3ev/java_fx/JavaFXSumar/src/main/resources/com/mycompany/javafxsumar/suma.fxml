<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="343.0" prefWidth="284.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxsumar.SumaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label nodeOrientation="RIGHT_TO_LEFT" prefHeight="45.0" prefWidth="186.0" text="Num1">
         <graphic>
            <TextField fx:id="num1" />
         </graphic>
      </Label>
      <Label text="+" VBox.vgrow="ALWAYS">
         <font>
            <Font size="22.0" />
         </font>
         <VBox.margin>
            <Insets bottom="-20.0" top="-20.0" />
         </VBox.margin>
      </Label>
      <Label nodeOrientation="RIGHT_TO_LEFT" prefHeight="45.0" prefWidth="186.0" text="Num2">
         <graphic>
            <TextField fx:id="num2" />
         </graphic>
      </Label>
      <Button id="botonSuma" fx:id="btnSumar" mnemonicParsing="false" onAction="#sumar" text="Sumar" />
      <TextField fx:id="resultField" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Resultado..." />
   </children>
</VBox>
